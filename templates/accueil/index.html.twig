{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<h1>Hello!!!</h1>
{% if app.user %}
    <p>Welcome, {{ app.user.name }}!</p>
    <a href="/logout">Logout</a>
{% else %}
    <p>Please log in to see your name.</p>
    <a href="/login">Login</a>
    <a href="/register">Register</a>

{% endif %}
{% endblock %}
