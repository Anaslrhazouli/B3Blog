{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<h1 class="text-3xl font-bold underline">
    Bonjour
  </h1>
{% if app.user %}
    <p class="text-3xl font-bold">Welcome, {{ app.user.name }}!</p>
    <a href="/logout">Logout</a>
{% else %}
    <p class="text-2xl font-semibold">Please log in.</p>
    <a class="bg-blue-500 hover:bg-blue-600 text-white font-semibold m-1 py-2 px-4 rounded-lg" href="/login">Login</a>
    <a class="bg-blue-500 hover:bg-blue-600 text-white font-semibold m-1 py-2 px-4 rounded-lg" href="/register">Register</a>

{% endif %}

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Contenu</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for article in articles %}
        <tr>
            <td>{{ article.titre }}</td>
            <td>{{ article.contenu }}</td>
            <td>
                <a class="underline" href="{{ path('app_article_show', {'id': article.id}) }}">Voir plus</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
