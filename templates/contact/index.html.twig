{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
  {% endblock %}
</head>

<body class="bg-gray-600 min-h-screen flex items-center justify-center">
  <div class="bg-red-800 p-8 rounded-lg shadow-lg w-full md:w-2/3 lg:w-1/3">
    <h1 class="text-3xl text-red-600 font-bold underline">
      Contact US
    </h1>
      <form action="" method="post">
          <div class="mb-4">
              <label for="name" class="block text-gray-600 font-medium text-sm mb-2">Name</label>
              <input type="text" id="name" name="name" required class="w-full py-2 px-3 border border-gray-300 rounded-lg">
          </div>

          <div class="mb-4">
              <label for="email" class="block text-gray-600 font-medium text-sm mb-2">Email</label>
              <input type="email" id="email" name="email" required class="w-full py-2 px-3 border border-gray-300 rounded-lg">
          </div>

          <div class="mb-4">
              <label for="subject" class="block text-gray-600 font-medium text-sm mb-2">Subject</label>
              <input type="text" id="subject" name="subject" required class="w-full py-2 px-3 border border-gray-300 rounded-lg">
          </div>

          <div class="mb-4">
              <label for="message" class="block text-gray-600 font-medium text-sm mb-2">Message</label>
              <textarea id="message" name="message" required class="w-full py-2 px-3 border border-gray-300 rounded-lg" rows="4"></textarea>
          </div>

          <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg">Submit</button>
      </form>
  </div>
</body>

</html>

{% endblock %}
