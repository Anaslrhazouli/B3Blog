<form method="post" action="{{ path('app_profile_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="text-white text-center font-bold text-xl px-6 py-2 rounded-full hover:bg-red-300
    hover:text-black duration-300 bg-red-700 inline-block mt-6">Supprimer</button>
</form>
